<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="880.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tetris.controller.HowToPlayController">
   <children>
      <ImageView fitHeight="880.0" fitWidth="900.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/Images/howToPlayBackground.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="119.0" fitWidth="264.0" layoutX="318.0" layoutY="583.0" onMouseClicked="#handleStart" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/Images/startButton.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fitHeight="93.0" fitWidth="101.0" layoutX="679.0" layoutY="128.0" onMouseClicked="#handleClose" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="/Images/closeButton.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
